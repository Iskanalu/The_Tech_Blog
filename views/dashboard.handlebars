  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <a class="btn btn-link edit-post-open" data-bs-toggle="modal" data-bs-target="#editModal" id="{{post.id}}">{{post.title}} {{format_date date_created}}</a>
      </div>
    </div>
    {{/each}}
  </div>
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
