<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title fs-5" id="exampleModalLabel">Create New Post</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="form new-post-form">
          <div class="form-group">
            <label for="post-title">Title</label>
            <input class="form-input" type="text" id="post-title" />
          </div>
          <div class="form-group">
            <label for="post-content">Content</label>
            <textarea class="form-input" id="post-content" title="post-content"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-primary w-100" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

